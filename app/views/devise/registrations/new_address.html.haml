.account__page
  .account__page__header
    = link_to image_tag("logo.png", alt: "logo"), root_path
  .account__page__main
    = form_for @address do |f|
      .account__page__main__content
        .account__page__main__content--error
          = render "devise/shared/error_messages", resource: @address
        .field__title
          お届け先情報の登録
        .field__label
          .name
            = f.label "お名前（全角）"
          .required
            必須
        .field__input
          = f.text_field :address_first_name, placeholder: "例）山田", class: "shortbox"
          = f.text_field :address_family_name, placeholder: "例）花子", class: "shortbox"
        .field__label
          .name
            = f.label "お名前（かな）"
          .required
            必須
        .field__input
          = f.text_field :address_first_name_kana, placeholder: "例）やまだ", class: "shortbox"
          = f.text_field :address_family_name_kana, placeholder: "例）はなこ", class: "shortbox"
        .field__label
          .name
            = f.label "郵便番号"
          .required
            必須
        .field__input
          = f.text_field :post_code, autofocus: true, placeholder: "例）123-4567", class: "textbox"
        .field__label
          .name
            = f.label "都道府県"
          .required
            必須
        .field__input
          = f.text_field :prefecture_code, autofocus: true, placeholder: "例）都道府県名", class: "textbox"
        .field__label
          .name
            = f.label "市町村"
          .required
            必須
        .field__input
          = f.text_field :city, autofocus: true, placeholder: "例）市町村", class: "textbox"
        .field__label
          .name
            = f.label "住所"
          .required
            必須
        .field__input
          = f.text_field :house_number, placeholder: "例）1-2-3", class: "textbox"
        .field__label
          .name
            = f.label "ビル、建物名"
          .required
            必須
        .field__input
          = f.text_field :building_name, placeholder: "例）パークハイツ101", class: "textbox"
        .field__label
          .name
            = f.label "電話番号"
          .required
            必須
        .field__input
          = f.text_field :phone_number, placeholder: "例）07012345678", class: "textbox"
        .field__guide
          %br
          %br
          「新規登録」のボタンを押すことにより、
          =link_to '利用規約', '#'
          に同意したものとみなします。
        .actions
          = f.submit "新規登録", class: "submit-btn"
          