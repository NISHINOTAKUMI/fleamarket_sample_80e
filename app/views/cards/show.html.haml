%h1 Card#show
%p Find me in app/views/card/show.html.haml
= link_to "マイページ", user_path(user_id: current_user.id)


.user-card__content
  %h2 クレジットカード情報
  .customer-card__content
    %figure.form_space
      .customer-card__content--number.form_space
        %h3
          = "**** **** **** " + @card[:last4]
      .customer-card__content--expired.form_space
        - exp_month = @card.exp_month.to_s
        - exp_year = @card.exp_year.to_s.slice(2,3)
        %h3
          = exp_month + " / " + exp_year
        = link_to card_path ,method: :delete,class:"customer-card__content--btn" do
          %button{type: "submit",class: "btn-red"}
            削除する